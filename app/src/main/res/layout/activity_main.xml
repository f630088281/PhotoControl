<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="im.youyu.photocontrol.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_connect"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/StartConnect"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="#616161"
            android:textSize="17sp"
            android:text="开始连接" />

        <EditText
            android:id="@+id/IPText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/StartConnect"
            android:layout_marginRight="16dp"
            android:textSize="17sp"
            android:hint="请输入IP地址"
            android:singleLine="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layout_connect">
        <TextView
            android:id="@+id/RecvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#616161"
            android:textSize="17sp"
            android:text="信息：" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线模式"
        android:layout_above="@+id/layout_content"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离线模式"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/layout_content"/>

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp">

    </FrameLayout>
</RelativeLayout>
